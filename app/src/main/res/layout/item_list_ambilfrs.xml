<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <LinearLayout
        android:id="@+id/full"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3sp"
        android:background="@drawable/frsmatkul"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/container_tidak_terpenuhi">

                <TextView
                    android:id="@+id/tv_tidak_terpenuhi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ralewaybold"
                    android:text="@string/prasyarat_tidak_terpenuhi"
                    android:paddingLeft="5dp"
                    android:paddingTop="1dp"
                    android:textColor="@color/merah"
                    android:textSize="20sp"></TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_nama_matkul"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ralewaybold"
                    android:hint="Nama Mata Kuliah"
                    android:paddingLeft="5dp"
                    android:paddingTop="1dp"
                    android:textColor="@color/black"
                    android:textSize="20sp"></TextView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="6dp">

                <TextView
                    android:id="@+id/tv_kode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ralewayregular"
                    android:hint="code"
                    android:paddingLeft="6dp"
                    android:paddingTop="2dp"
                    android:textSize="15sp"></TextView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="6dp">

                <TextView
                    android:id="@+id/tv_nilai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ralewayregular"
                    android:hint="code"
                    android:paddingLeft="6dp"
                    android:paddingTop="2dp"
                    android:textSize="15sp"></TextView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>